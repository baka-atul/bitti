<script>
    // Canvas hearts background
    const canvas = document.getElementById('heartCanvas');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    const hearts = [];

    class Heart {
        constructor() {
            this.x = Math.random() * canvas.width;
            this.y = canvas.height + 50;
            this.size = Math.random() * 20 + 10;
            this.speed = Math.random() * 2 + 1;
            this.opacity = Math.random() * 0.5 + 0.3;
        }

        draw() {
            ctx.save();
            ctx.globalAlpha = this.opacity;
            ctx.font = `${this.size}px Arial`;
            ctx.fillText('‚ù§Ô∏è', this.x, this.y);
            ctx.restore();
        }

        update() {
            this.y -= this.speed;
            if (this.y < -50) {
                this.y = canvas.height + 50;
                this.x = Math.random() * canvas.width;
            }
        }
    }

    for (let i = 0; i < 30; i++) {
        hearts.push(new Heart());
    }

    function animateHearts() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        hearts.forEach(heart => {
            heart.update();
            heart.draw();
        });
        requestAnimationFrame(animateHearts);
    }

    animateHearts();

    window.addEventListener('resize', () => {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
    });

    // Love button interaction
    const loveButton = document.getElementById('loveButton');
    const loveCount = document.getElementById('loveCount');
    const loveMessage = document.getElementById('loveMessage');
    let count = 0;

    const messages = [
        "My heart just skipped a beat! üíì",
        "Sending you all my love! üíï",
        "I miss you so much! üò¢üíù",
        "You mean everything to me! üåü",
        "Can't wait to hold you! ü§ó",
        "You're my whole world! üåç‚ù§Ô∏è",
        "Forever and always! ‚ôæÔ∏è",
        "I love you more than words! üíñ",
        "You're my soulmate! üíë",
        "My heart belongs to you! üîêüíù",
        "Distance can't break us! üí™üíï",
        "You're worth the wait! ‚è≥‚ù§Ô∏è"
    ];

    loveButton.addEventListener('click', function() {
        count++;
        loveCount.textContent = count;

        const randomMessage = messages[Math.floor(Math.random() * messages.length)];
        loveMessage.textContent = randomMessage;

        // Create burst effect
        for (let i = 0; i < 8; i++) {
            setTimeout(() => {
                createHeartBurst();
            }, i * 50);
        }
    });

    function createHeartBurst() {
        const heart = document.createElement('div');
        heart.style.position = 'fixed';
        heart.style.left = '50%';
        heart.style.top = '50%';
        heart.style.fontSize = '30px';
        heart.style.zIndex = '9999';
        heart.style.pointerEvents = 'none';

        const emojis = ['‚ù§Ô∏è', 'üíï', 'üíñ', 'üíó', 'üíì', 'üíù'];
        heart.innerHTML = emojis[Math.floor(Math.random() * emojis.length)];

        document.body.appendChild(heart);

        const angle = Math.random() * Math.PI * 2;
        const distance = 100 + Math.random() * 150;
        const tx = Math.cos(angle) * distance;
        const ty = Math.sin(angle) * distance - 100;

        heart.animate([
            { transform: 'translate(-50%, -50%) scale(1)', opacity: 1 },
            { transform: `translate(calc(-50% + ${tx}px), calc(-50% + ${ty}px)) scale(0.5)`, opacity: 0 }
        ], {
            duration: 1500,
            easing: 'ease-out'
        });

        setTimeout(() => heart.remove(), 1500);
    }

    // Countdown timer
    function updateCountdown() {
        // Set your reunion date here (format: 'YYYY-MM-DD')
        // If you don't have a set date, it will show a message
        const reunionDate = new Date('2026-02-28').getTime(); // Change this date!
        const now = new Date().getTime();
        const distance = reunionDate - now;

        if (distance > 0) {
            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById('days').textContent = days;
            document.getElementById('hours').textContent = hours;
            document.getElementById('minutes').textContent = minutes;
            document.getElementById('seconds').textContent = seconds;
        } else {
            // If date has passed or not set
            document.getElementById('days').textContent = 'üíï';
            document.getElementById('hours').textContent = 'üíï';
            document.getElementById('minutes').textContent = 'üíï';
            document.getElementById('seconds').textContent = 'üíï';
        }
    }

    setInterval(updateCountdown, 1000);
    updateCountdown();

    // Reveal reasons function
    function revealReasons() {
        document.getElementById('reasonsContent').classList.add('revealed');
        document.querySelector('.reveal-btn').style.display = 'none';
    }

    // Add floating hearts randomly
    setInterval(() => {
        const heart = document.createElement('div');
        heart.className = 'floating-heart';
        const emojis = ['‚ù§Ô∏è', 'üíï', 'üíñ', 'üíó', 'üíù'];
        heart.innerHTML = emojis[Math.floor(Math.random() * emojis.length)];
        heart.style.left = Math.random() * 100 + 'vw';
        heart.style.animationDuration = (Math.random() * 3 + 4) + 's';
        document.body.appendChild(heart);

        setTimeout(() => heart.remove(), 7000);
    }, 3000);
</script>
</body>
</html>
